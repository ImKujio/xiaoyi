{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:42367",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "xiaoyi",
    "version": "0.2.5"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "clipboard": {
        "all": true
      },
      "http": {
        "scope": [
          "http://**",
          "https://**"
        ],
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "fs": {
        "scope": [
          "$RESOURCE"
        ],
        "readFile": true,
        "readDir": true,
        "exists": true
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "me.kujio.xiaoyi",
      "longDescription": "一个简单的划词翻译软件，选中文本按下Ctrl-Alt-D显示翻译",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "./dict.db"
      ],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "xiaoyi",
        "width": 280,
        "height": 168,
        "minWidth": 280,
        "minHeight": 168,
        "maxWidth": 560,
        "maxHeight": 336,
        "skipTaskbar": true,
        "maximized": false,
        "alwaysOnTop": true,
        "decorations": false,
        "center": true,
        "transparent": true,
        "visible": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
